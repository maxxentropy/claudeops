{
  "name": "claude-continuous-improvement",
  "version": "1.0.0",
  "description": "Continuously improving system for Claude slash commands",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:verbose": "jest --verbose --coverage",
    "test:phase1": "jest phase-1/*.test.js --coverage",
    "test:phase2": "jest phase-2/*.test.js --coverage",
    "benchmark": "node phase-2/benchmark.js"
  },
  "dependencies": {
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "phase-1/*.js",
      "phase-2/*.js",
      "!**/*.test.js",
      "!**/benchmark.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  }
}